{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": [
        "src/data/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@src/*": [
        "src/*"
      ]
    },
    "strictNullChecks": true
  }
}